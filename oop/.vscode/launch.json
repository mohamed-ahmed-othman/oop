    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run development",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_development.dart",
            "args": [
              "--flavor",
              "development"
            ]
          },
          {
            "name": "Run production",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_production.dart",
            "args": [
              "--flavor",
              "production"
            ]
          },
          {
            "name": "oop",
            "cwd": "oop",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "oop (profile mode)",
            "cwd": "oop",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "oop (release mode)",
            "cwd": "oop",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}